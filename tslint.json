{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": ["node_modules"]
  },
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "ordered-imports": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "trailing_comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "always"
        }
      }
    ],
    "only-arrow-functions": false,
    "object-literal-sort-keys": true
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
